<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="addGroupDialog" title="New User" class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Group Name"/>
                <Input value="{/groupName}" class="sapUiTinyMarginBottom"/>
                <Label text="Display Name"/>
                <Input value="{/displayName}" class="sapUiTinyMarginBottom"/>
                <Label text="Description"/>
                <Input value="{/description}" class="sapUiTinyMarginBottom"/>
                <Label text="Type"/>
                <Input value="{/groupType}" class="sapUiTinyMarginBottom"/>
            </VBox>
        </content>
        <buttons>
            <Button text="Save" press="onSavePress"/>
            <Button text="Cancel" press="onCancelPress"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
