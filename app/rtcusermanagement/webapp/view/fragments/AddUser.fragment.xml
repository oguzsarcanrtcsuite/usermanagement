<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="addUserDialog" title="New User" class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="First Name"/>
                <Input value="{/firstName}" class="sapUiTinyMarginBottom"/>
                <Label text="Last Name"/>
                <Input value="{/lastName}" class="sapUiTinyMarginBottom"/>
                <Label text="Email"/>
                <Input value="{/email}" class="sapUiTinyMarginBottom"/>
                <Label text="Login Name"/>
                <Input value="{/loginName}" class="sapUiTinyMarginBottom"/>
            </VBox>
        </content>
        <buttons>
            <Button text="Save" press="onSavePress"/>
            <Button text="Cancel" press="onCancelPress"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
