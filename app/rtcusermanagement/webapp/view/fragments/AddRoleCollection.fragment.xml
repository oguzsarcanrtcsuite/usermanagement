<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="addUserDialog" title="New User" class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Role Collection Name"/>
                <Input value="{/roleCollectionName}" class="sapUiTinyMarginBottom"/>
                <Label text="Role Collection Description"/>
                <Input value="{/roleCollectionDescription}" class="sapUiTinyMarginBottom"/>
            </VBox>
        </content>
        <buttons>
            <Button text="Save" press="onSavePress"/>
            <Button text="Cancel" press="onCancelPress"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
